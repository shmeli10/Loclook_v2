<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MM"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/MainActivity_ToolbarLayout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="4dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/MainActivity_Toolbar"
            style="@style/MM"/>
        <!--<ImageButton-->
            <!--android:id="@+id/MainActivity_Toolbar_NavButton"-->
            <!--style="@style/Base.Widget.AppCompat.ActionButton"-->
            <!--android:layout_width="60dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:layout_alignParentStart="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:padding="15dp"-->
            <!--android:scaleType="centerInside"-->
            <!--android:src="@drawable/menu_icon"-->
            <!--android:contentDescription="@string/open_left_menu"/>-->
        <FrameLayout
            style="@style/WM"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="15dp">

            <ImageButton
                android:id="@+id/MainActivity_Toolbar_NavButton"
                style="@style/Standard_IV"
                android:src="@drawable/menu_icon"/>

        </FrameLayout>
        <TextView
            android:id="@+id/MainActivity_ToolbarTitle"
            style="@style/WW"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:maxLines="1"
            android:gravity="center"
            android:text="Title"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>
        <LinearLayout
            style="@style/WM"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingRight="5dp">

            <FrameLayout
                android:id="@+id/MainActivity_PublicationButton"
                style="@style/Standard_Image_Wrap"
                android:visibility="gone">

                <ImageButton
                    style="@style/Standard_IV"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/publication_icon"/>

            </FrameLayout>
            <FrameLayout
                android:id="@+id/MainActivity_CameraButton"
                style="@style/Standard_Image_Wrap"
                android:visibility="gone">

                <ImageButton
                    style="@style/Standard_IV"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/camera_icon"/>

            </FrameLayout>
            <FrameLayout
                android:id="@+id/MainActivity_SendButton"
                style="@style/Standard_Image_Wrap"
                android:visibility="gone">

                <ImageButton
                    style="@style/Standard_IV"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/send_icon"/>

            </FrameLayout>

        </LinearLayout>

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/mainActivityProgressBar"
        style="@style/WW"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <FrameLayout
        android:id="@+id/MainActivity_FragmentContainer"
        style="@style/MM"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>