<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <!--<style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">-->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <!--<style name="NavigationDrawerStyle">-->
        <!--<item name="android:textSize">21.28sp</item>-->
    <!--</style>-->

    //////////////////////////////////////////////////////////////////

    <style name="MM">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MW">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WW">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WM">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    //////////////////////////////////////////////////////////////////

    <style name="HLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="HLine_Grey" parent="@style/HLine">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">@color/light_grey</item>
    </style>

    <style name="HLine_Blue">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@color/light_blue</item>
    </style>

    <style name="Root_Container" parent="@style/MM">
        <item name="android:background">@color/white</item>
    </style>

    <!--<style name="Standard_IV">-->
    <style name="Standard_IV" parent="Base.Widget.AppCompat.ActionButton">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <!--<item name="android:layout_weight">0</item>-->
        <!--<item name="android:layout_gravity">center_vertical</item>-->
    </style>

    <style name="Standard_Image_Wrap" parent="@style/WM">
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    //////////////////////////////////////////////////////////////////

    <style name="Auth_AppLogo" parent="@style/WW">
        <item name="android:layout_width">400dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:src">@drawable/app_logo_yellow_horiz</item>
    </style>

    <style name="Auth_EnterLabel" parent="@style/WW">
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/enter_text</item>
    </style>

    <style name="Auth_EnterDataLabel" parent="@style/MW">
        <item name="android:layout_marginTop">20dp</item>
        <!--<item name="android:layout_marginLeft">35dp</item>-->
        <!--<item name="android:layout_marginRight">35dp</item>-->
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Auth_EnterDataText" parent="@style/MW">
        <item name="android:padding">15dp</item>
        <item name="android:ems">10</item>
        <item name="android:selectAllOnFocus">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@drawable/rounded_rect_field_white</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorHint">@color/light_blue</item>
    </style>

    <style name="Auth_BackButton" parent="@style/WW">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:src">@drawable/auth_arrow_back</item>
    </style>

    <style name="Auth_BackText" parent="@style/WW">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:text">@string/back_text</item>
    </style>

    <style name="Auth_ForwardButton" parent="@style/WW">
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:src">@drawable/auth_arrow_forward</item>
    </style>

    <style name="Auth_ForwardText" parent="@style/WW">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:text">@string/continue_text</item>
    </style>

</resources>
